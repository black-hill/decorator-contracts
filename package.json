{
  "name": "ts-code-contracts",
  "version": "0.0.0",
  "description": "Design By Contract for TypeScript and ECMAScript classes",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run clean && npm run lint",
    "build": "npm run build-types && parcel build src/index.ts",
    "postbuild": "npm run copy-static",
    "build-types": "tsc -p tsconfig.json --emitDeclarationOnly --outDir dist",
    "clean": "rimraf dist",
    "clean-full": "rimraf dist && rimraf .cache && rimraf node_modules",
    "copy-static": "ncp ./README.md ./dist/README.md && ncp ./package.json ./dist/package.json",
    "postcopy-static": "npm run update-package",
    "update-package": "json -I -f ./dist/package.json -e \"this.main='index.js';delete this.jest;this.devDependencies={};this.scripts={}\"",
    "prelint": "npm run type-check",
    "lint": "tslint --project tsconfig.json --fix -e \"node_modules\"",
    "test": "jest",
    "type-check": "tsc -p tsconfig.json --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://thenewobjective@dev.azure.com/thenewobjective/ts-code-contracts/_git/ts-code-contracts"
  },
  "keywords": [
    "contract",
    "contracts",
    "Dbc",
    "test",
    "assert",
    "require",
    "invariant"
  ],
  "author": "Michael L Haufe <tno@thenewobjective.com> (https://thenewobjective.com)",
  "license": "UNLICENSED",
  "jest": {
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "jest": "^24.8.0",
    "json": "^9.0.6",
    "ncp": "^2.0.0",
    "parcel-bundler": "^1.12.3",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {}
}
