{
  "name": "@final-hill/decorator-contracts",
  "version": "0.0.0",
  "description": "Code Contracts for TypeScript and ECMAScript classes",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run clean && npm run lint",
    "build": "webpack",
    "build-changelog": "node ./scripts/commands.js build-changelog",
    "prebuild-nofix": "npm run clean && npm run lint-nofix",
    "build-nofix": "webpack",
    "clean": "node ./scripts/commands.js clean",
    "clean-full": "node ./scripts/commands.js clean-full",
    "debug": "node --debug-brk --inspect ./node_modules/jest/bin/jest -i",
    "prelint": "npm run type-check",
    "lint": "eslint src/ --ext .ts --fix",
    "prelint-nofix": "npm run type-check",
    "lint-nofix": "eslint src/ --ext .ts",
    "test": "jest --coverage",
    "type-check": "tsc -p tsconfig.json --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/final-hill/decorator-contracts"
  },
  "keywords": [
    "assertion",
    "code-contracts",
    "decorators",
    "demands",
    "design-by-contract",
    "invariant",
    "liskov-substitution-principle",
    "LSP",
    "open-closed-principle",
    "organized-panic",
    "overrides",
    "precondition",
    "postcondition",
    "rescue",
    "requires",
    "SOLID"
  ],
  "author": "Michael L Haufe <tno@thenewobjective.com> (https://thenewobjective.com)",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "commander": "^4.1.1",
    "eslint": "^6.8.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^25.3.0",
    "jest-junit": "^8.0.0",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {},
  "files": [
    "dist"
  ]
}
