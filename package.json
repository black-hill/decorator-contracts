{
  "name": "@final-hill/decorator-contracts",
  "version": "0.19.0",
  "description": "Code Contracts for TypeScript and ECMAScript classes",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run clean && npm run lint",
    "build": "webpack",
    "prebuild-nofix": "npm run clean && npm run lint-nofix",
    "build-nofix": "webpack",
    "clean": "rimraf ./dist ./coverage",
    "clean-full": "rimraf ./dist, ./coverage, ./.cache, ./node_modules",
    "debug": "node --debug-brk --inspect ./node_modules/jest/bin/jest -i",
    "prelint": "npm run type-check",
    "lint": "eslint src/ --ext .ts --fix",
    "prelint-nofix": "npm run type-check",
    "lint-nofix": "eslint src/ --ext .ts",
    "test": "jest --coverage",
    "type-check": "tsc -p tsconfig.json --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/final-hill/decorator-contracts"
  },
  "bugs": {
    "url": "https://github.com/final-hill/decorator-contracts/issues"
  },
  "keywords": [
    "assertion",
    "code-contracts",
    "decorators",
    "demands",
    "design-by-contract",
    "invariant",
    "liskov-substitution-principle",
    "LSP",
    "open-closed-principle",
    "organized-panic",
    "overrides",
    "precondition",
    "postcondition",
    "rescue",
    "requires",
    "SOLID"
  ],
  "author": "Michael L Haufe <tno@thenewobjective.com> (https://thenewobjective.com)",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/node": "^13.13.35",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^6.8.0",
    "eslint-plugin-header": "^3.1.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^25.5.4",
    "jest-junit": "^8.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.1",
    "ts-loader": "^6.2.2",
    "typescript": "^4.1.2",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {},
  "files": [
    "dist"
  ]
}
